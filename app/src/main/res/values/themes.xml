    <style name="BottomNavigationView.Text" parent="@style/Widget.Design.BottomNavigationView">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="itemIconTint">@drawable/bottom_navigation_selector</item>
        <item name="itemTextColor">@drawable/bottom_navigation_selector</item>
        <item name="android:textColor">@color/pink_FFFD3A69</item>
    </style>

    <style name="Theme.Delivery" parent="Base.Theme.Delivery" />
</resources>